<%- include('header', {pagetitle: 'Regisztráció'}) -%> 
<%- include('navbar-visitor') -%> 

    <div class="container py-4">
        <div class="row">
            <div class="col-lg-4 col-2"></div>
            <div class="col-lg-4 col-8 bg-light py-4 rounded-3 p-5 ">
                <form method="POST">
                    <div class="mb-3">
                        <h3>Regisztráció</h3>
                    </div>
                    <% if (typeof error !== 'undefined') { %>
                        <div class="alert alert-danger"><%= error%></div>
                    <% } %>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email cím</label>
                        <input type="email" class="form-control" name="email" aria-describedby="emailHelp" <% if(typeof email
                        !=='undefined' ) { %> value="<%= email %>" <% }; %> required>
                    </div>
                    <div class="mb-3">
                        <label for="name" class="form-label">Felhasználónév</label>
                        <input type="text" class="form-control" name="name" <% if(typeof name
                        !=='undefined' ) { %> value="<%= name %>" <% }; %> required>
                    </div>
                    <div class="mb-3">
                        <label for="tel" class="form-label">Telefonszám</label>
                        <input type="number" class="form-control" name="tel" <% if(typeof tel
                        !=='undefined' ) { %> value="<%= tel %>" <% }; %> required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Jelszó</label>
                        <input type="password" class="form-control" name="password" required>
                    </div>
                    <div class="mb-3">
                        <label for="passwordConfirm" class="form-label">Jelszó megerősítése</label>
                        <input type="password" class="form-control" name="passwordConfirm" required>
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1" checked>
                        <label class="form-check-label" for="exampleCheck1">Feliratkozom a hírlevélre.</label>
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Elolvastam és elfogadom az <a href="https://www.youtube.com/watch?v=dQw4w9WgXcQ" target="blank">ÁSZF</a>-et.</label>
                    </div>
                    <input type="submit" class="btn btn-outline-primary mb-3" value="Regisztráció"> 
                    <div class="mb-6">
                        <span>Van már fiókod?
                        <a class="" href="login">Jelentkezz be</a></span>
                    </div> 
            </div>
            <div class="col-lg-4 col-2"></div>
        </div>
    </div>
    </form>

<%- include('footer') -%> 